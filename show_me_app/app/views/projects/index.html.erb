<!-- Homepage - root page -->
<% if current_page?(root_path) %>
	<h1>All Projects</h1>
<% else %>
<!-- If the current page is not the root, show the My Projects page -->
	<h1>My Projects</h1>
<% end %>

<!-- If User is not signed in don't show these links -->
<% if current_user.present? %>
		<%= link_to "New Project", new_project_path %> |
		<%= link_to "My Projects", projects_path %> |
		<%= link_to "Home", '/' %>
<% end %>
<br>

<div class="container">
	<div class="row">
		<!-- Render the projects -->
		<%= render @projects %>
	</div>
</div>

<%= form_for @filterrific do |f| %>
<div>
  <h3>Select Tag:</h3>
  <div class="row">
    <% @filterrific.select_options[:with_project].each do |p| %>
      <div class="col-md-4">
        <%= check_box_tag("filterrific[with_project][]",p) %>
        <%=h p %>
      </div>
    <% end %>
  </div>
</div>
<% end %>